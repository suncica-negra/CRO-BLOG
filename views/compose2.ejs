
<%- include("partials/header2"); -%>
    <h1>Compose</h1>
    <form class="" action="/posts/<%= requestedPostId %>/edit?_method=PUT" method="post">
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" value="<%= title %>" required>
        <label>Post</label>
        <textarea class="form-control" name="postBody" rows="5" cols="30" required><%= content %></textarea>
      </div>
      <button class="btn btn-primary" type="submit" name="button">Uredi</button>
    </form>

