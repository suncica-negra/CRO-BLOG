<%- include('partials/header1') %>

<div class="container mt-5">
  <h1 class="register">Prijava</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card">
        <div class="card-body">

          <!-- Makes POST request to /login route -->
          <form action="/login" method="POST">
            <div class="form-group">
              <label for="email">Korisničko ime</label>
              <input class="form-control" placeholder="Upišite Vaše korisničko ime" name="username" required>
            </div>
            <div class="form-group">
              <label for="password">Zaporka / šifra</label>
              <input type="password" class="form-control" placeholder="Upišite Vašu zaporku / šifru" name="password" required>
            </div>
            <button type="submit" class="btn btn-dark">Prijavi me</button>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>

